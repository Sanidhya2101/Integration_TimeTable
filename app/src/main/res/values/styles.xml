<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_before_edit_text">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4D5C62</item>
        <item name="android:fontFamily">@font/montserrat_regular</item> //400
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_text_with_border">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4D5C62</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="submit_button" parent="no_corner_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="light_small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/right_side_border</item>
        <item name="android:textColor">#1A2D35</item>
    </style>

    <style name="select_date_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:textColor">#1A2D35</item>
    </style>

    <style name="icon_before_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="add_event_header">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>