<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="325dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFCFF"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/course_colour"
        android:layout_width="8.4dp"
        android:layout_height="70dp"
        android:background="#649CFF"/>

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="19.89dp"
        android:layout_marginTop="11.99dp"
        android:layout_marginLeft="23.23dp"
        android:text="MA 324"
        android:textSize="14sp"
        android:textColor="#01161E"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="37.93dp"
        android:layout_marginLeft="23.24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:text="Theory"
            android:textColor="#454646"/>
        <View
            android:layout_width="3.47dp"
            android:layout_height="3.47dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/eclipse"/>

        <TextView
            android:id="@+id/course_place"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:text="MS Teams"
            android:layout_marginLeft="4dp"
            android:textColor="#454646"/>

    </LinearLayout>
        
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="18.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:text="8 am"
            android:textColor="#060D19"/>

        <TextView
            android:id="@+id/course_duration"
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_marginTop="2dp"
            android:text="1 hour"
            android:textSize="9sp"
            android:textColor="#060D19"/>



    </LinearLayout>


    </androidx.cardview.widget.CardView>



