<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top"
        android:background="@drawable/edit_header_bg"
        android:layout_height="64dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/class_icon"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_resource_class"
            android:layout_height="match_parent"
            app:tint="@color/white" />
        <TextView
            android:layout_toRightOf="@+id/class_icon"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="Edit class"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="700"
            android:gravity="center_vertical"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/edit_course"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/class_code_icon"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_resource_class"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                app:tint="#4D5C62" />
            <TextView
                android:layout_toRightOf="@+id/class_code_icon"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:id="@+id/textcoursecode"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4D5C62"
                android:text="Course Code"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_toRightOf="@+id/textcoursecode"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:background="@drawable/edit_text_bg"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:gravity="center_horizontal|center_vertical"
                android:hint="eg. MA 101"
                android:textFontWeight="500"
                android:fontFamily="@font/montserrat"
                android:layout_marginRight="10dp"
                android:id="@+id/course_code"
                android:singleLine="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_name_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_course"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/class_name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_resource_class"
                app:tint="#4D5C62" />

            <TextView
                android:id="@+id/textcoursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/class_name_icon"
                android:text="Name"
                android:textColor="#4D5C62"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:gravity="center_vertical"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/textcoursename"
                android:background="@drawable/edit_text_bg"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15sp"
                android:id="@+id/course_name"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="500"
                android:gravity="center_horizontal|center_vertical"
                android:hint="eg. Number System"
                android:singleLine="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_plateform_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_name_slot"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/class_plateform_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_resource_class"
                app:tint="#4D5C62" />

            <TextView
                android:id="@+id/textcourseplateform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/class_plateform_icon"
                android:text="Plateform"
                android:textColor="#4D5C62"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:gravity="center_vertical"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/textcourseplateform"
                android:background="@drawable/edit_text_bg"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15sp"
                android:id="@+id/course_plateform"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="500"
                android:gravity="center_horizontal|center_vertical"
                android:hint="eg. MS Team"
                android:singleLine="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edit_time_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_plateform_slot"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/class_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_resource_class"
                app:tint="#4D5C62" />

            <TextView
                android:id="@+id/textcoursetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/class_time_icon"
                android:text="Time Slot"
                android:textColor="#4D5C62"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:gravity="center_vertical"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/textcoursetime"
                android:background="@drawable/edit_text_bg"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15sp"
                android:id="@+id/course_time"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="500"
                android:gravity="center_horizontal|center_vertical"
                android:hint="eg. 9 am"
                android:singleLine="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edit_day_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_time_slot"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/class_day_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_resource_class"
                app:tint="#4D5C62" />

            <TextView
                android:id="@+id/textcourseday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/class_day_icon"
                android:text="Days"
                android:textColor="#4D5C62"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/textcourseday"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="M"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Monday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="T"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Tuesday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="W"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Wednesday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="T"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Thursday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="F"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Friday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="S"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Saturday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


                <TextView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:text="S"
                    android:textSize="12sp"
                    android:textColor="#99A2A5"
                    android:layout_marginRight="20dp"
                    android:id="@+id/Sunday"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="700"/>


            </LinearLayout>



        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_course"
            android:layout_marginTop="10dp"
            android:id="@+id/slot_recycler"
            android:visibility="visible"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_below="@+id/slot_recycler"
            android:text="+ add a class slot"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="40dp"
            android:id="@+id/add_new_slot"
            android:visibility="visible"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:textSize="14sp"
            android:textColor="#B3B9BC"/>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/create_new_class"
            android:layout_height="72dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_new_slot"
            android:textColor="@color/white"
            android:backgroundTint="#1A2D35"
            android:text="Update Class"
            android:visibility="visible"
            style="@style/no_corner_button"
            android:textAllCaps="false"
            android:textFontWeight="900"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_black"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/create_new_slot"
            android:layout_height="72dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_day_slot"
            android:textColor="@color/white"
            android:backgroundTint="#3D83FF"
            android:visibility="gone"
            android:text="Add Slot"
            style="@style/no_corner_button"
            android:textAllCaps="false"
            android:textFontWeight="900"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_black"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>


    </RelativeLayout>

</RelativeLayout>